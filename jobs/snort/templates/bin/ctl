#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/snort/helpers/ctl_setup.sh 'snort'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    echo $$ > $PIDFILE

    # Copy pulledpork cron task
    cp /var/vcap/jobs/snort/config/schedule /etc/cron.d

    # Run pulledpork
    /var/vcap/jobs/snort/bin/pulledpork

    # Link omprog module to built-in rsyslog
    ln -sf /var/vcap/packages/omprog/lib/rsyslog/omprog.so \
      /usr/local/lib/rsyslog/omprog.so
    cp /var/vcap/jobs/snort/config/syslog-riemann.conf \
      /etc/rsyslog.d/30-syslog-riemann.conf
    service rsyslog restart

    # Run snort
    exec /var/vcap/packages/snort/bin/snort \
      -c /var/vcap/jobs/snort/config/snort.conf \
      -l /var/vcap/sys/log/snort \
      >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: snort_ctl {start|stop}"

    ;;

esac
exit 0
